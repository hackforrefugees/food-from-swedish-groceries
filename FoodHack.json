{
	"application": {

		"title": "Cooking with Swedish groceries",

		"theme": "bootswatch-darkly",

        "on_user_created_code": "Languages.insert({ name: 'Svenska'}); languages.insert({ name: 'Arabiska'});",
        
		"use_collection2": false,

		"collections": [
			{
				"name": "recipies",
				"fields": [
					{ "name": "name", "title": "Name", "required": true, "exportable": true },
					{ "name": "country", "title": "Country", "default": "Sweden", "exportable": true },

                    {
						"name": "language",
						"title": "Language",
						"required": true,
						"input": "select",
						"lookup_query_name": "language_list",
						"lookup_field": "name",
						"lookup_key": "_id",
						"show_in_dataview": false,
						"show_in_read_only_form": false,
						"exportable": false,

						"join_collection": "languages",
						"join_fields": ["name"],
						"join_container": "language"
					},
                    { "name": "ingredients", "title": "Ingredients", "input": "textarea", "exportable": true },
					{ "name": "note", "title": "Note", "input": "textarea", "exportable": true },
                    { "name": "Steps", "title": "Steps", "input": "textarea", "exportable": true,  "show_in_dataview": false }
				]
			},
            
            "name": "languages",
				"fields": [
					{ "name": "name", "title": "Name", "required": true, "exportable": true },
				]
			}
            
		],

		"queries": [
			{
				"name": "recipies",
				"collection": "recipies",
				"filter": {}
			},
			{
				"name": "recipies_empty",
				"collection": "recipies",
				"filter": {"_id": null},
				"find_one": true
			},
			{
				"name": "recipe",
				"collection": "recipies",
				"filter": { "_id": ":recipeId" },
				"find_one": true
			}
		],

		"free_zone": {

			"components": [
				{
					"name": "main_menu",
					"type": "menu",
					"items": [
						{ "title": "Home page", "route": "home" },
						{ "title": "Recipies", "route": "recipies" }
					]
				}
			],

			"pages": [
				{
					"name": "home",
					"title": "",
					"components": [
						{
							"name": "home_jumbotron",
							"title": "Example application",
							"type": "jumbotron",
							"text": "<b>We don't use this page I don't think. </b>",
							"button_title": "Continue &raquo;",
							"button_route": "recipies"
						}
					]
				},
				{
					"name": "recipies",
					"components": [
						{
							"name": "view",
							"type": "data_view",
							"title": "Recipies",
							"text_if_empty": "No recipies :(",

							"query_name": "recipies",
							"query_params": [],

							"insert_route": "recipies.insert",
							"edit_route": "recipies.edit",
							"edit_route_params": [
								{ "name": "recipeId", "value": "this._id" }
							],
							"details_route": "recipies.details",
							"details_route_params": [
								{ "name": "recipeId", "value": "this._id" }
							]
						}
					],
					"pages": [
						{
							"name": "insert",
							"components": [
								{
									"name": "insert_form",
									"type": "form",
									"mode": "insert",
									"title": "New recipe",

									"query_name": "recipies_empty",
									"query_params": [],

									"submit_route": "recipies",
									"cancel_route": "recipies"
								}
							]
						},
						{
							"name": "details",
							"route_params": ["recipeId"],
							"components": [
								{
									"name": "details_form",
									"type": "form",
									"mode": "read_only",
									"title": "Details",
									"layout": "horizontal",

									"query_name": "recipe",
									"query_params": [],

									"close_route": "recipies",
									"back_route": "recipies"
								}
							]
						},

						{
							"name": "edit",
							"route_params": ["recipeId"],
							"components": [
								{
									"name": "edit_form",
									"type": "form",
									"mode": "update",
									"title": "Edit recipe",
									"submit_route": "recipies",
									"cancel_route": "recipies",

									"query_name": "recipe",
									"query_params": []
								}
							]
						}
					]
				}
			]
		}
	}
}
